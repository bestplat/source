<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="hibernateCache">

	<diskStore path="java.io.tmpdir/ehcache/vssq/hibernate" />

	<!-- DefaultCache setting. -->
	<defaultCache maxEntriesLocalHeap="10000" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600"
		overflowToDisk="false" maxEntriesLocalDisk="100000" />

	<!-- Special objects setting. -->
	<cache name="com.vssq.entity.User" maxEntriesLocalHeap="1000" eternal="true"
		overflowToDisk="false" maxEntriesLocalDisk="10000" />
	<cache name="com.vssq.entity.User.roleList" maxEntriesLocalHeap="1000" eternal="true"
		overflowToDisk="false" maxEntriesLocalDisk="10000" />
	<cache name="com.vssq.entity.Team" maxEntriesLocalHeap="100" eternal="true"
		overflowToDisk="false" maxEntriesLocalDisk="1000" />
	<cache name="com.vssq.entity.Role" maxEntriesLocalHeap="100"
		eternal="true" overflowToDisk="false" maxEntriesLocalDisk="1000" />
</ehcache>
